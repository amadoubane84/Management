<form method="post" action="{{ path('ressource_delete', {'id': ressource.id}) }}" onsubmit="return confirm('Etes-vous sûr de vouloir supprimer cet employé?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ressource.id) }}">
    <button class="btn btn-danger"><i class="fas fa-trash-alt"> Supprimer</i></button>
</form>
